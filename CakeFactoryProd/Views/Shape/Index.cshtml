@model IEnumerable<CakeFactoryProd.Models.Shape>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}
<a asp-action="Cakes" asp-controller="Admin">Cakes</a>|<a asp-action="Index" asp-controller="Toppings">Toppings</a>|<a asp-action="Index" asp-controller="Fillings">Fillings</a>|<a asp-action="Index" asp-controller="Shape">Shapes</a>

<h1>Shapes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<h5>
    @ViewBag.message
</h5>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceFactor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceFactor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                    @{
                        var BtLabel = "";
                        if (item.IsActive == true) 
                            BtLabel = "Deactivate";
                        else 
                            BtLabel = "Activate";
                    }
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">
                        @BtLabel
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
