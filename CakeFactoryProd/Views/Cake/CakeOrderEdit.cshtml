@model CakeFactoryProd.ViewModels.AdminOrderVM

@{
    ViewData["Title"] = "Cake Factory";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Orders</h4>
<hr />
<div class="row">
    <divs>
        <form asp-action="CakeOrderEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CakeOrderVM.OrderId" />
            <div><h4>Order ID: @Model.CakeOrderVM.OrderId</h4></div>
                    <br/>
            <div class="form-group">
                <label asp-for="IsPicked" class="control-label">Picked up?</label><br />
                        <select asp-for="IsPicked"><br />
                            <option value="True">Yes</option>
                            <option value="False">No</option>
                        </select>
                        <span asp-validation-for="IsPicked" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
<p>
    <a class="btn btn-primary mt-2" asp-area="" asp-controller="Admin" asp-action="Index">Back to orders</a>
</p>
</div>

