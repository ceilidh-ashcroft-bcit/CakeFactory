@model CakeFactoryProd.ViewModels.CakeEditVM

@{
    ViewData["Title"] = "Cakes";
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<h1>Cakes</h1>

<p>
    <a class="btn btn-primary float-right" asp-area="" asp-controller="Cake" asp-action="Create">Add Cake</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Size</th>
            <th>Shape</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CakeVMs) {
        
        <tr>
            <td>@item.Name</td>
                <td>@string.Format("{0:0.00}", @item.Price)</td>
            <td>@item.Size</td>
            <td>@item.Shape</td>
            <td>@item.IsActive</td>
            <td>
                <a asp-controller="Cake" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-controller="Cake" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-controller="Cake" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

